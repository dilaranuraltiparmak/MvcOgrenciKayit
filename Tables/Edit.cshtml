@model MvcOgrenciKayit.Models.Table

@{
    ViewBag.Title = "Edit";
}

<h2>Öğrenciyi Düzenle</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.OgrenciID)

        <div class="form-group">
            @Html.LabelFor(model => model.OgrenciAd, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.OgrenciAd, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.OgrenciAd, new { @class = "form-control", Placeholder = "Adınızı yazınız", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrenciAd, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrenciSoyad, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @*@Html.EditorFor(model => model.OgrenciSoyad, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.TextBoxFor(model => model.OgrenciSoyad, new { @class = "form-control", Placeholder = "Soyadınızı yazınız", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrenciSoyad, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrenciMail, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrenciMail, new { @class = "form-control", Placeholder = "Mail adresinizi giriniz", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrenciMail, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrenciFoto, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.OgrenciFoto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.OgrenciFoto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.OgrenciAdres, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.OgrenciAdres, new { @class = "form-control", Placeholder = "Adresi yazınız", Required = "" })
                @Html.ValidationMessageFor(model => model.OgrenciAdres, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Kaydet" class="btn-warning"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Listeye Dön", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
